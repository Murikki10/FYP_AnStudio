<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 按下時的背景色 -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#388E3C" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:angle="90"
                android:startColor="#4CAF50"
            android:endColor="#81C784" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>