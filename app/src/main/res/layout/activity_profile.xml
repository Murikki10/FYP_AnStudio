<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F8FF"
    tools:context=".ProfileActivity">

    <!-- 主容器 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 頂部個人資料區域 -->
        <RelativeLayout
            android:id="@+id/profileHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/profile_header_background"
            android:paddingTop="40dp"
            android:paddingBottom="16dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:elevation="20dp">

            <!-- 返回按鈕 -->
            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:padding="8dp"
                android:src="@drawable/ic_back"
                android:contentDescription="Back to previous screen"
                app:tint="#007BFF" />

            <!-- 設定按鈕 -->
            <ImageButton
                android:id="@+id/settingsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:padding="8dp"
                android:src="@drawable/ic_settings"
                android:contentDescription="Open settings"
                app:tint="#007BFF" />

            <!-- 用戶頭像 -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/backButton"
                android:layout_marginTop="16dp"
                android:src="@drawable/default_avatar"
                android:contentDescription="User Profile Image"
                android:clickable="true"
                android:focusable="true"
                tools:srcCompat="@drawable/default_avatar" />

            <!-- 用戶名稱 -->
            <TextView
                android:id="@+id/userNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profileImage"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:textColor="#333333"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="User Name"
                tools:text="John Doe" />

            <!-- 用戶簡介 -->
            <TextView
                android:id="@+id/userBioText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/userNameText"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:textColor="#555555"
                android:textSize="14sp"
                android:text="This is a short bio about the user."
                tools:text="Loves coding and reading!" />

            <!-- 統計資料容器 -->
            <LinearLayout
                android:id="@+id/statsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/userBioText"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:gravity="center">

                <!-- 追蹤者數 -->
                <LinearLayout
                    android:id="@+id/followersContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="24dp"
                    android:clickable="true"
                    android:focusable="true">
                    <TextView
                        android:id="@+id/followersCountText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#333333"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:text="0"
                        tools:text="500" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Followers"
                        android:textColor="#555555" />
                </LinearLayout>

                <!-- 追蹤中數 -->
                <LinearLayout
                    android:id="@+id/followingContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="24dp"
                    android:clickable="true"
                    android:focusable="true">
                    <TextView
                        android:id="@+id/followingCountText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#333333"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:text="0"
                        tools:text="150" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Following"
                        android:textColor="#555555" />
                </LinearLayout>

                <!-- 帖子數 -->
                <LinearLayout
                    android:id="@+id/postsContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:id="@+id/postsCountText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#333333"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:text="0"
                        tools:text="10" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Posts"
                        android:textColor="#555555" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <!-- 加載進度指示器 -->
        <ProgressBar
            android:id="@+id/loadingIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />

        <!-- 主要內容區域 -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/profileHeader">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- 訓練記錄卡片 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp"
                    android:backgroundTint="#FFFFFF"
                    android:padding="8dp">

                    <!-- 卡片內部佈局 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- 卡片標題 -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Event List"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#007BFF"
                            android:layout_gravity="center"
                            android:layout_marginBottom="12dp" />

                        <!-- 分割線 -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#E0E0E0"
                            android:layout_marginBottom="12dp" />

                        <!-- 訓練記錄列表 -->
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/trainingRecordsRecyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:overScrollMode="never" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- 用戶帖子卡片 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp"
                    android:backgroundTint="#FFFFFF"
                    android:padding="8dp">

                    <!-- 卡片內部佈局 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- 無活動提示 -->
                        <TextView
                            android:id="@+id/noEventsTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="16dp"
                            android:text="No registered events"
                            android:textSize="16sp"
                            android:textColor="#555555"
                            android:visibility="gone" />

                        <!-- 卡片標題 -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="12dp"
                            android:text="Train Record"
                            android:textColor="#007BFF"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <!-- 分割線 -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#E0E0E0"
                            android:layout_marginBottom="12dp" />

                        <!-- 用戶帖子列表 -->
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/eventListRecyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:overScrollMode="never" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>