<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:orientation="vertical">

    <!-- 左邊的消息（其他用戶） -->
    <LinearLayout
        android:id="@+id/leftMessageContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_gravity="start"
        android:gravity="start"
        android:visibility="gone">

        <!-- 用戶名 -->
        <TextView
            android:id="@+id/leftMessageUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@android:color/darker_gray"
            android:paddingBottom="4dp" />

        <!-- 消息內容 -->
        <TextView
            android:id="@+id/leftMessageContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/message_background"
            android:padding="8dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_gravity="start"
            android:gravity="start" />

        <!-- 發送時間 -->
        <TextView
            android:id="@+id/leftMessageTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            android:paddingTop="4dp"
            android:gravity="start" />
    </LinearLayout>

    <!-- 右邊的消息（當前用戶） -->
    <LinearLayout
        android:id="@+id/rightMessageContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_gravity="end"
        android:gravity="end"
        android:visibility="gone">

        <!-- 用戶名 -->
        <TextView
            android:id="@+id/rightMessageUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@android:color/darker_gray"
            android:paddingBottom="4dp"
            android:layout_gravity="end"
            android:gravity="end" />

        <!-- 消息內容 -->
        <TextView
            android:id="@+id/rightMessageContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/message_background_self"
            android:padding="8dp"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_gravity="end"
            android:gravity="end" />

        <!-- 發送時間 -->
        <TextView
            android:id="@+id/rightMessageTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            android:paddingTop="4dp"
            android:layout_gravity="end"
            android:gravity="end" />
    </LinearLayout>
</LinearLayout>