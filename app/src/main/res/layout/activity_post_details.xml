<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 上方固定區域 -->
    <LinearLayout
        android:id="@+id/contentContainer"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp">

        <!-- 帖子標題 -->
        <TextView
            android:id="@+id/postTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:padding="16dp"
            android:textStyle="bold" />

        <!-- 帖子作者和時間 -->
        <TextView
            android:id="@+id/postMetadata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textColor="#888888" />

        <!-- 帖子內容 -->
        <TextView
            android:id="@+id/postContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp" />

        <!-- 帖子圖片 -->
        <ImageView
            android:id="@+id/postImageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:layout_margin="8dp" />

        <!-- 點贊和留言區域 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <!-- Like 按鈕 -->
            <ImageButton
                android:id="@+id/likeButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_like_inactive"
                android:contentDescription="Like Button"
                />

            <!-- Like 數字 -->
            <TextView
                android:id="@+id/likeCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="0"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginEnd="16dp" />

            <!-- Comment 圖標 -->
            <ImageView
                android:id="@+id/commentIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_comments"
                android:contentDescription="Comment Icon"
                />

            <!-- Comment 數字 -->
            <TextView
                android:id="@+id/commentCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="0"
                android:textSize="16sp"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- 內文與圖片分隔線 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <!-- 圖片展示 -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/postImagesRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp" />

        <!-- 圖片與留言分隔線 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />
    </LinearLayout>

    <!-- 留言區域（可滑動） -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/commentsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/contentContainer"
        android:layout_above="@+id/commentBar"
        android:padding="8dp"
        android:scrollbars="vertical" />

    <!-- 底部留言輸入框和按鈕 -->
    <LinearLayout
        android:id="@+id/commentBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="8dp">

        <!-- 分隔線 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">

            <!-- 留言輸入框 -->
            <EditText
                android:id="@+id/commentInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Write a comment..."
                android:padding="8dp"
                android:background="@drawable/edittext_background"
                android:layout_marginEnd="8dp" />

            <!-- 留言按鈕 -->
            <ImageButton
                android:id="@+id/commentButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="?android:attr/selectableItemBackground"
                android:src="@drawable/ic_commentbutton1"
                android:contentDescription="Comment Button" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>